{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base", "group:recommended", "config:recommended"],
    "git-submodules": {
    "enabled": true
      },
    "terraform": {                                                                
      "depTypes": ["helm_release"]                                               
      },
    "packageRules": [
    {
      "matchUpdateTypes": ["minor", "digest", "major"],
      "automerge": true,
      "groupName": "dependency updates"
    }
      ]
}     






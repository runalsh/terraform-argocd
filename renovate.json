{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "terraform": {                                                                
      "depTypes": ["helm_release"]                                               
    },
    "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "digest", "major"],
      "automerge": true,
      "groupName": "dependency updates"
    }
    ],
    "ignoreDeps": ["postgres"]
}     






{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "group:recommended",
        "config:recommended"
    ],
    "git-submodules": {
        "enabled": true
    },
    "terraform": {},
    "patch": {
        "enabled": false
    },
    "digest": {
        "enabled": false
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "major"
            ],
            "automerge": true,
            "groupName": "dependency updates"
        }
    ]
}
